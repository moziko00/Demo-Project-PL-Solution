@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees </h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D => D.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m =>employee.Name)</td>
                    <td>@Html.DisplayFor(m =>employee.Age)</td>
                    <td>@Html.DisplayFor(m =>employee.Address)</td>
                    <td>@Html.DisplayFor(m =>employee.Salary)</td>
                    <td>@Html.DisplayFor(m => employee.IsActive)</td>
                    <td>@Html.DisplayFor(m =>@employee.Email)</td>
                    <td>@Html.DisplayFor(m =>@employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(m =>@employee.HireDate)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Employee</h3>
    </div>
}
