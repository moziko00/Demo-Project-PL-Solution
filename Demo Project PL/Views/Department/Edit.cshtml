@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<br />
<br />


<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>  @* Error  Message List For All Form *@
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        @* For Error Message *@
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        @* For Error Message *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        @* For Error Message *@
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>